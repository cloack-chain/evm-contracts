{
  "name": "root",
  "version": "0.0.1.beta.1",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "abi",
    "contracts"
  ],
  "scripts": {
    "download:snark-artifacts": "rimraf snark-artifacts && ts-node scripts/download-snark-artifacts.ts 20",
    "lerna-publish": "yarn build && lerna publish && lerna run tsc-clean",
    "lerna-publish:public": "yarn build && lerna publish --no-private && lerna run tsc-clean",
    "build": "hardhat compile && forge build && lerna run tsc",
    "prepare": "husky install",
    "prettier": "prettier --write --plugin=prettier-plugin-solidity --plugin=@trivago/prettier-plugin-sort-imports .",
    "upgrade-dependencies": "yarn-up -e '@cloack-chain/spec,@cloack-chain/typechain-types' && yarn upgrade",
    "test": "hardhat test --network hardhat && forge test",
    "coverage": "hardhat coverage --network hardhat && forge coverage",
    "deploy:cloackchain": "hardhat deploy:cloackchain",
    "verify:cloackchain": "hardhat verify:cloackchain",
    "deploy:cloackchain-semaphore": "hardhat deploy:cloackchain-semaphore",
    "verify:cloackchain-semaphore": "hardhat verify:cloackchain-semaphore"
  },
  "devDependencies": {
    "@cloack-chain/evm-contracts": "link:contracts",
    "@cloack-chain/library": "link:library",
    "@cloack-chain/typechain-types": "link:typechain-types",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-foundry": "^1.1.1",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/contracts": "^5.0.1",
    "@semaphore-protocol/group": "^3.15.2",
    "@semaphore-protocol/identity": "^3.15.2",
    "@semaphore-protocol/proof": "^3.15.2",
    "@solidstate/contracts": "^0.0.58",
    "@solidstate/library": "^0.0.58",
    "@solidstate/spec": "^0.0.58",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/download": "^8.0.5",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.7",
    "chai": "^4.2.0",
    "dotenv": "^16.3.1",
    "download": "^8.0.0",
    "ethers": "^6.4.0",
    "hardhat": "^2.19.4",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-dependency-compiler": "^1.1.3",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-linearization": "^0.1.1",
    "hardhat-spdx-license-identifier": "^2.2.0",
    "husky": "^8.0.3",
    "keccak256": "^1.0.6",
    "lerna": "^8.0.2",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "prettier-plugin-solidity": "^1.3.1",
    "solidity-coverage": "^0.8.0",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.0",
    "typescript": "^5.3.3",
    "yarn-up": "^1.4.1"
  }
}
